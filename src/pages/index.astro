    <script>
        const carousel = document.getElementById("carousel");
        let index = 0;
        const totalImages = carousel.children.length;

        function slide() {
            index++;
            if (index >= totalImages) {
                index = 0;
            }
            carousel.style.transform = `translateX(-${index * 100}%)`;
        }

        setInterval(slide, 2000); 
    </script>
